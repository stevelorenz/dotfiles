#!/usr/bin/env bash
# About: Simple tool to some operations on a "bare-mental" window manager like dwm.

case $# in

0)
    echo "Missing the command."
    exit 1
    ;;

1)
	case $1 in

    run-polkit)
        echo "Run Gnome polkit agent."
        sudo /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
		;;

    enable-xautolock)
        echo "Enable Xautolock."
        xautolock -time 15 -locker ~/.config/i3/blurlock.sh &
        ;;

    lock)
        echo "Lock screen with i3 blurlock."
        ~/.config/i3/blurlock.sh &
        ;;

	*)
		echo "Unknown command."
		exit 1
		;;
	esac
	;;

*)
	echo "Too many commands."
	exit 1
	;;
esac
