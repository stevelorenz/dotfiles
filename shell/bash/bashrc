# ================================================
# BASH Configuration File
# ================================================

# Customised Prompt
# ----------------------------------------------------------
# show git branch information
parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

# set prompt
export PS1="\u@\h \[\033[32m\]\w\[\033[33m\]\$(parse_git_branch)\[\033[00m\] $ "
# ----------------------------------------------------------


# Alias
# ----------------------------------------------------------
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

alias ee='nvim'
alias ..='cd ..'
# ----------------------------------------------------------
